@import "loader";
@import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap");

html,
body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

body {
  margin: 0;
  position: relative;
}

canvas {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  object-fit: cover;
  position: absolute;
}

/* ===== PAGE D'ACCUEIL ===== */
.welcome-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #0a0f1c 0%, #1a1f2e 50%, #0f1419 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  overflow: hidden;
  transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
    transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.welcome-screen.hidden {
  opacity: 0;
  transform: scale(1.1);
  pointer-events: none;
}

.welcome-content {
  position: relative;
  z-index: 3;
  text-align: center;
  max-width: 600px;
  padding: 40px;
  animation: fadeInUp 1.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.welcome-header {
  margin-bottom: 60px;
}

.logo-container {
  position: relative;
  display: inline-block;
  margin-bottom: 30px;
}

.logo-rings {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
}

.ring {
  position: absolute;
  border: 2px solid rgba(64, 224, 255, 0.3);
  border-radius: 50%;
  animation: spin 20s linear infinite;
}

#ring-1 {
  width: 100%;
  height: 100%;
  border-top-color: rgba(64, 224, 255, 0.8);
  animation-duration: 20s;
}

#ring-2 {
  width: 80%;
  height: 80%;
  top: 10%;
  left: 10%;
  border-right-color: rgba(64, 224, 255, 0.6);
  animation-duration: 15s;
  animation-direction: reverse;
}

#ring-3 {
  width: 60%;
  height: 60%;
  top: 20%;
  left: 20%;
  border-bottom-color: rgba(64, 224, 255, 0.9);
  animation-duration: 25s;
}

.welcome-title {
  font-family: "Inter", sans-serif;
  font-size: 4rem;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  letter-spacing: 8px;
  text-shadow: 0 0 30px rgba(64, 224, 255, 0.4);
  position: relative;
  z-index: 4;
  animation: glow 2s ease-in-out infinite alternate;
}

.welcome-subtitle {
  font-family: "Inter", sans-serif;
  font-size: 1.2rem;
  font-weight: 400;
  color: #a0b3c5;
  margin: 0;
  letter-spacing: 2px;
  line-height: 1.6;
  opacity: 0;
  animation: fadeIn 1s ease-out 0.8s forwards;
}

.welcome-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.enter-button {
  position: relative;
  background: linear-gradient(
    135deg,
    rgba(64, 224, 255, 0.2) 0%,
    rgba(64, 224, 255, 0.1) 100%
  );
  border: 2px solid rgba(64, 224, 255, 0.4);
  border-radius: 50px;
  padding: 18px 40px;
  font-family: "Inter", sans-serif;
  font-size: 1.1rem;
  font-weight: 600;
  color: #ffffff;
  cursor: pointer;
  letter-spacing: 1px;
  text-transform: uppercase;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  backdrop-filter: blur(10px);
  opacity: 0;
  animation: fadeInUp 1s ease-out 1.2s forwards;
  min-width: 280px;
}

.enter-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.6s ease;
}

.enter-button:hover::before {
  left: 100%;
}

.enter-button:hover {
  background: linear-gradient(
    135deg,
    rgba(64, 224, 255, 0.3) 0%,
    rgba(64, 224, 255, 0.15) 100%
  );
  border-color: rgba(64, 224, 255, 0.7);
  box-shadow: 0 0 30px rgba(64, 224, 255, 0.3),
    inset 0 0 20px rgba(64, 224, 255, 0.1);
  transform: translateY(-2px);
}

.enter-button:active {
  transform: translateY(0);
  box-shadow: 0 0 20px rgba(64, 224, 255, 0.2);
}

.button-text {
  position: relative;
  z-index: 2;
}

.button-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  background: radial-gradient(
    circle,
    rgba(64, 224, 255, 0.3) 0%,
    transparent 70%
  );
  border-radius: 50%;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.enter-button:hover .button-glow {
  width: 300px;
  height: 300px;
}

.welcome-note {
  font-family: "Inter", sans-serif;
  font-size: 0.9rem;
  color: #6b7280;
  margin: 0;
  letter-spacing: 0.5px;
  opacity: 0;
  animation: fadeIn 1s ease-out 1.6s forwards;
}

/* ===== EFFETS D'ARRIÈRE-PLAN ===== */
.welcome-bg-effects {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
}

.cosmic-particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(
      2px 2px at 20px 30px,
      rgba(64, 224, 255, 0.4),
      transparent
    ),
    radial-gradient(2px 2px at 40px 70px, rgba(255, 255, 255, 0.3), transparent),
    radial-gradient(1px 1px at 90px 40px, rgba(64, 224, 255, 0.5), transparent),
    radial-gradient(
      1px 1px at 130px 80px,
      rgba(255, 255, 255, 0.2),
      transparent
    ),
    radial-gradient(2px 2px at 160px 30px, rgba(64, 224, 255, 0.3), transparent);
  background-repeat: repeat;
  background-size: 200px 100px;
  animation: stars 30s linear infinite;
  opacity: 0.8;
}

.orbital-paths {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100vw;
  height: 100vh;
}

.orbit {
  position: absolute;
  border: 1px solid rgba(64, 224, 255, 0.1);
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.orbit-1 {
  width: 60vw;
  height: 60vw;
  animation: spin 60s linear infinite;
}

.orbit-2 {
  width: 80vw;
  height: 80vw;
  animation: spin 90s linear infinite reverse;
}

.orbit-3 {
  width: 100vw;
  height: 100vw;
  animation: spin 120s linear infinite;
}

/* ===== ANIMATIONS ===== */
@keyframes spin {
  to {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes glow {
  from {
    text-shadow: 0 0 20px rgba(64, 224, 255, 0.3);
  }
  to {
    text-shadow: 0 0 30px rgba(64, 224, 255, 0.6),
      0 0 40px rgba(64, 224, 255, 0.3);
  }
}

@keyframes stars {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-100px);
  }
}

/* ===== RESPONSIVE ===== */
@media (max-width: 768px) {
  .welcome-content {
    padding: 20px;
    max-width: 90%;
  }

  .logo-rings {
    width: 150px;
    height: 150px;
  }

  .welcome-title {
    font-size: 2.5rem;
    letter-spacing: 4px;
  }

  .welcome-subtitle {
    font-size: 1rem;
    letter-spacing: 1px;
  }

  .enter-button {
    padding: 16px 32px;
    font-size: 1rem;
    min-width: 250px;
  }

  .orbit-1 {
    width: 80vw;
    height: 80vw;
  }

  .orbit-2 {
    width: 100vw;
    height: 100vw;
  }

  .orbit-3 {
    width: 120vw;
    height: 120vw;
  }
}

@media (max-width: 480px) {
  .welcome-title {
    font-size: 2rem;
    letter-spacing: 2px;
  }

  .welcome-subtitle {
    font-size: 0.9rem;
  }

  .enter-button {
    padding: 14px 28px;
    font-size: 0.9rem;
    min-width: 220px;
  }

  .logo-rings {
    width: 120px;
    height: 120px;
  }
}

.instructions-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 3000;
  opacity: 0;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 20px;
}

.instructions-overlay.show {
  opacity: 1;
}

.instructions-modal {
  background: linear-gradient(145deg, #0a0f1c 0%, #1a1f2e 50%, #0f1419 100%);
  border: 1px solid rgba(64, 224, 255, 0.3);
  border-radius: 24px;
  max-width: 500px;
  width: 100%;
  max-height: 85vh;
  overflow: hidden;
  box-shadow: 0 25px 80px rgba(0, 0, 0, 0.6), 0 0 0 1px rgba(64, 224, 255, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.05);
  transform: scale(0.9) translateY(20px);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.instructions-modal.show {
  transform: scale(1) translateY(0);
}

.instructions-content {
  padding: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.instructions-header {
  background: linear-gradient(
    135deg,
    rgba(64, 224, 255, 0.1) 0%,
    rgba(64, 224, 255, 0.05) 100%
  );
  border-bottom: 1px solid rgba(64, 224, 255, 0.2);
  padding: 32px 32px 24px;
  display: flex;
  align-items: center;
  gap: 20px;
  position: relative;
}

.instructions-header::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(64, 224, 255, 0.5) 50%,
    transparent 100%
  );
}

.instructions-icon {
  position: relative;
  width: 60px;
  height: 60px;
  flex-shrink: 0;
}

.icon-planet {
  width: 24px;
  height: 24px;
  background: radial-gradient(circle, #40e0ff 0%, #0099cc 100%);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 20px rgba(64, 224, 255, 0.6);
}

.icon-orbit {
  width: 50px;
  height: 50px;
  border: 2px solid rgba(64, 224, 255, 0.4);
  border-radius: 50%;
  border-top-color: rgba(64, 224, 255, 0.8);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: spin 3s linear infinite;
}

.instructions-title {
  font-family: "Inter", sans-serif;
  font-size: 24px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  flex: 1;
  text-shadow: 0 0 20px rgba(64, 224, 255, 0.3);
  letter-spacing: -0.5px;
}

.instructions-close {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  color: #ffffff;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  flex-shrink: 0;
}

.instructions-close:hover {
  background: rgba(255, 69, 69, 0.1);
  border-color: rgba(255, 69, 69, 0.3);
  transform: scale(1.05);
  color: #ff4545;
}

.instructions-body {
  padding: 32px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  flex: 1;
  overflow-y: auto;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  gap: 20px;
  padding: 20px;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.instruction-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 3px;
  height: 100%;
  background: linear-gradient(180deg, #40e0ff 0%, rgba(64, 224, 255, 0.3) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.instruction-item:hover {
  background: rgba(64, 224, 255, 0.05);
  border-color: rgba(64, 224, 255, 0.15);
  transform: translateY(-2px);
}

.instruction-item:hover::before {
  opacity: 1;
}

.instruction-icon {
  font-size: 24px;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(64, 224, 255, 0.1);
  border-radius: 12px;
  border: 1px solid rgba(64, 224, 255, 0.2);
  flex-shrink: 0;
}

.instruction-text {
  flex: 1;
}

.instruction-text strong {
  font-family: "Inter", sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
  display: block;
  margin-bottom: 8px;
  letter-spacing: -0.2px;
}

.instruction-text p {
  font-family: "Inter", sans-serif;
  font-size: 14px;
  color: #a0b3c5;
  margin: 0;
  line-height: 1.5;
  letter-spacing: 0.1px;
}

.instructions-footer {
  padding: 24px 32px 32px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  display: flex;
  justify-content: center;
}

.instructions-button {
  background: linear-gradient(
    135deg,
    rgba(64, 224, 255, 0.2) 0%,
    rgba(64, 224, 255, 0.1) 100%
  );
  border: 2px solid rgba(64, 224, 255, 0.4);
  border-radius: 50px;
  padding: 16px 32px;
  font-family: "Inter", sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
  cursor: pointer;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
  min-width: 220px;
}

.instructions-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.6s ease;
}

.instructions-button:hover::before {
  left: 100%;
}

.instructions-button:hover {
  background: linear-gradient(
    135deg,
    rgba(64, 224, 255, 0.3) 0%,
    rgba(64, 224, 255, 0.15) 100%
  );
  border-color: rgba(64, 224, 255, 0.7);
  box-shadow: 0 0 30px rgba(64, 224, 255, 0.3);
  transform: translateY(-2px);
}

.instructions-button:active {
  transform: translateY(0);
}

/* ===== RESPONSIVE POUR MOBILE ===== */
@media (max-width: 768px) {
  .instructions-overlay {
    padding: 16px;
  }

  .instructions-modal {
    max-width: 100%;
    max-height: 90vh;
    border-radius: 20px;
  }

  .instructions-header {
    padding: 24px 24px 20px;
    flex-direction: column;
