  }

  .instructions-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    font-size: 16px;
  }

  .instructions-body {
    padding: 24px;
    gap: 20px;
  }

  .instruction-item {
    padding: 16px;
    gap: 16px;
    flex-direction: column;
    text-align: center;
  }

  .instruction-icon {
    font-size: 20px;
